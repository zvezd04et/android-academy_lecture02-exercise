<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.z.newsleak">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="AllowBackup,GoogleAppIndexingWarning">
        <activity
            android:name=".features.intro.IntroActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".features.newsfeed.NewsListActivity" />
        <activity
            android:name=".features.about_info.AboutActivity"
            android:label="@string/about_title"
            android:parentActivityName=".features.newsfeed.NewsListActivity" />
        <activity
            android:name=".features.news_details.NewsDetailsActivity"
            android:configChanges="orientation|screenSize"
            android:parentActivityName=".features.newsfeed.NewsListActivity" />
        <activity
            android:name=".features.news_edit.NewsEditActivity"
            android:label="@string/news_edit_title"
            android:parentActivityName=".features.news_details.NewsDetailsActivity"/>
    </application>

</manifest>